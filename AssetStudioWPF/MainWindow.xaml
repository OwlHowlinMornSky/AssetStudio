<Window x:Class="AssetStudioWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssetStudioWPF"
        xmlns:controls="clr-namespace:AssetStudioWPF.Controls"
        mc:Ignorable="d"
        Title="AssetStudio" SizeToContent="Manual"
        MinWidth="800" MinHeight="500" AllowDrop="True" DragEnter="Window_DragEnter" Drop="Window_Drop">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" Height="24">
                <MenuItem Header="Open"/>
            </MenuItem>
            <MenuItem Header="Options">

            </MenuItem>
            <MenuItem Header="Filter">
                <MenuItem Header="All"/>
                <Separator/>
            </MenuItem>
            <MenuItem Header="Model">

            </MenuItem>
            <MenuItem Header="Export">

                <MenuItem Header="Special">
                    <MenuItem Header="Arknight" FontStyle="Italic"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Debug">

            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar Width="300" Height="18"></ProgressBar>
            <TextBlock>123</TextBlock>
            <Separator/>
            <TextBlock>567</TextBlock>
        </StatusBar>
        <Grid MinWidth="400" MinHeight="300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="300"/>
                <ColumnDefinition Width="5*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            <controls:AssetsPanel x:Name="sub_assets" Grid.Row="0" Grid.Column="0"/>
            <controls:PreviewPanel x:Name="sub_preview" Grid.Row="0" Grid.Column="1"/>
            <GridSplitter Grid.Row="0" Grid.Column="0" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Right"/>
        </Grid>
    </DockPanel>
</Window>
